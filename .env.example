# Database (local dev or Supabase)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/volteyr
# Optional: use for LangGraph checkpointer if DATABASE_URL is Supabase transaction pooler (port 6543).
# Prefer session pooler (e.g. port 5432) to avoid DuplicatePreparedStatement.
# CHECKPOINT_DATABASE_URL=postgresql://user:password@localhost:5432/volteyr
# Set to true to create tables on startup (local/Docker only; use supabase_schema.sql on Supabase)
DB_CREATE_TABLES=false
# Set to false if SSL cert verification fails (e.g. corporate proxy; dev only, not for production)
# DB_SSL_VERIFY=false

# Supabase (API auth: URL + KEY are enough; JWT Secret is optional for faster local verification)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-or-service-key
# Optional: JWT Secret (Project Settings > JWT Keys > Legacy JWT Secret) for local token verification
# SUPABASE_JWT_SECRET=your-jwt-secret

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Airtable (comma-separated table names, e.g. Client,Projet,Leads)
AIRTABLE_API_KEY=pat-your-personal-access-token
AIRTABLE_BASE_ID=appYourBaseId
AIRTABLE_TABLE_NAMES=Client,Projet,Leads
